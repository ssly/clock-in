/**home: index.wxss**/

.container image {
  width: 280rpx;
  height: 280rpx;
  margin-top: 48rpx;
  border-radius: 160rpx;
}

.punch-view {
  position: absolute;
  bottom: 280rpx;
}

.punch-button {
  color: #fff;
  background-color: #66cd00;
  border: 1px solid #fff;
  border-radius: 60rpx;
}

/* 洪建平开发 */

.header, .circle, .wx-name {
  margin: 0 auto;
  text-align: center;
}

.circle {
  width: 200rpx;
  height: 200rpx;
  margin-top: 40rpx;
  border-radius: 50%;
  border: 1px solid red;
  overflow: hidden;
  /* background: url('https://wx.qlogo.cn/mmopen/vi_32/Q0j4TwGTfTKnVibLzcaoEVL5ZsGurgiajmaQCDnrdBz0YTzUicZyK2pn6DCKH2NMIYqFSfhZbR5tbWibBr3vCLfP1A/132') center center no-repeat; */
}

.wx-name {
  margin-top: 10rpx;
}

.notes {
  margin-top: 10rpx;
  color: #dbd8d8;
}
.body{
  margin-top: 30rpx;
  color: #323232;
  text-align: center;
  width: 100%;
}
.login-tips {
  position: absolute;
  width: 100%;
  top: 0;
  text-align: center;
}
.clock-days{
  margin:0 auto;
  width: 450rpx;
  overflow: hidden;
  display: flex
}
.total,.his-top,.during{
  flex: 1;
}
.number-days{
  font-size: 48rpx;
}
.text-days{
  font-size: 24rpx
}
.footer{
  margin-top: 80rpx;
  padding: 0 40rpx 0 20px;
}
.footer-content{
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  
}
.clock-name,.clock-time{
  flex: 1;
}
.clock-img{
  width:80rpx;
  height: 100rpx;
  position: relative;
}
.clock-img image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);

}
.clock-name{
  height: 100rpx;
  line-height: 100rpx;
}
.clock-time{
  text-align: center;
  margin-right: 40rpx;
  height: 100rpx;
}
.date-day{
  color: #999;
  font-size: 28rpx
}